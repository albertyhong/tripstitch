<h1>Listing destinations</h1>

<%= will_paginate @destinations %>
<table>
  <tr>
    <th>&nbsp;</th>
    <th>Name</th>
    <th>Description</th>
    <th>Location</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @destinations.each do |destination| %>
  <tr>
    <td><%= check_box_tag "destinations_id[]", destination.id %></td>
    <td><%= destination.name %></td>
    <td><%= destination.description %></td>
    <td><%= destination.location %></td>
    <td><%= destination.rating %></td>
    <td><%= link_to 'Show', destination %></td>
    <td><%= link_to 'Edit', edit_destination_path(destination) %></td>
    <td><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

